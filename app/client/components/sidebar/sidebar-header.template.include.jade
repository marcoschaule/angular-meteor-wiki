.nav(data-ng-if="!vm.isSignedIn()")
    h6 {{ 'navigation.title.Authentication' | translate }}
    a(tabindex="-1",
            data-ui-sref="signIn",
            data-ui-sref-active="active")
        |{{ 'authentication.title.SignIn' | translate }}
    span &nbsp;&nbsp;|&nbsp;&nbsp;
    a(tabindex="-1",
            data-ui-sref="signUp",
            data-ui-sref-active="active")
        |{{ 'authentication.title.SignUp' | translate }}

div(data-ng-if="vm.isSignedIn()")
    .vmargin-3rem
    span.badge: i.fa.fa-user
    .btn-group
        button.btn.btn-link.dropdown-toggle(
                type='button',
                data-toggle='dropdown',
                data-popover-placement="bottom",
                data-uib-popover="On the Bottom!")
            span.username oncemac
            span &nbsp;
            span.caret
        ul.dropdown-menu
            li: a(tabindex="-1",
                    title="{{ 'navigation.title.Profile' | translate }}",
                    data-ui-sref="profile",
                    data-ui-sref-active="active")
                |{{ 'navigation.title.Profile' | translate }}
            li: a(tabindex="-1",
                    title="{{ 'navigation.title.Help' | translate }}",
                    data-ui-sref="help",
                    data-ui-sref-active="active")
                |{{ 'navigation.title.Help' | translate }}
            li.divider(role='separator')
            li: a(tabindex="-1",
                    title="{{ 'navigation.title.SignOut' | translate }}",
                    data-ui-sref="signOut",
                    data-ui-sref-active="active")
                |{{ 'navigation.title.SignOut' | translate }}