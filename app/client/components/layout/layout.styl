// *****************************************************************************
// Imports and requires
// *****************************************************************************

@import "../../includes/stylus/variables.styl"

// *****************************************************************************
// General
// *****************************************************************************

*
    font-weight normal
    outline none !important

html, body
    margin 0
    height 100%
    padding 0

h4
    margin-top 3rem !important
h6
    margin-bottom 1rem !important

fieldset
    margin 1rem 0 !important
label
    display block
    font-weight normal
input[type="radio"], input[type="checkbox"]
    display inline
    height auto
    margin 0 .6rem 0 0
    width auto
input[type="radio"] + label, input[type="checkbox"] + label
    margin-right 3rem

// *****************************************************************************
// General classes
// *****************************************************************************

// Font styles
.striked
    text-decoration line-through
.lower
    text-transform lowercase

// Displays
.inline
    display inline
.block
    display block
.inline-block
    display inline-block

// Positions
.relative
    position relative
.absolute
    position absolute
.fixed
    position fixed

// Alignments
.left
    text-align left
.right
    text-align right
.center
    text-align center
.justify
    text-align justify
    
// Floats
.float-left
    float left
.float-right
    float right
.clear
    clear both

// Margins
.vmargin-half-rem
    height 0.5rem
.vmargin-1rem
    height 1rem
.vmargin-2rem
    height 2rem
.vmargin-3rem
    height 3rem
.vmargin-4rem
    height 4rem
.hmargin-half-rem, .hmargin-1rem, .hmargin-2rem, .hmargin-3rem, .hmargin-4rem
    height 1px
    float left
.hmargin-half-rem
    width .5rem
.hmargin-1rem
    width 1rem
.hmargin-2rem
    width 2rem
.hmargin-3rem
    width 3rem
.hmargin-4rem
    width 4rem
.no-margin
    margin 0
.no-margin-right
    margin-right 0
.no-margin-left
    margin-left 0
.no-margin-top
    margin-top 0
.no-margin-bottom
    margin-bottom 0
    
 // Paddings
.no-padding
    padding 0
.no-padding-right
    padding-right 0
.no-padding-left
    padding-left 0
.no-padding-top
    padding-top 0
.no-padding-bottom
    padding-bottom 0
.hpadding-1rem
    padding-left 1rem
    padding-right 1rem
.hpadding-2rem
    padding-left 2rem
    padding-right 2rem
.padding-right-8px
    padding-right 24px !important

// colors
.red
    color red
.green
    color green
.color-bg-2
    color $colorBackground2
    
// error messages
.errorField, .errorFieldEmpty, .errorFieldDynamic
    font-weight normal
    height 3rem
    width 100%
.errorFieldDynamic
    height auto

// cursors
.pointer
    cursor pointer
    
// forms
.form-input-like
    padding 8px
    border-radius $radiusDefault
    background-color #e4e4e4

// *****************************************************************************
// Layout
// *****************************************************************************

#container
    max-width 1600px
    min-height 100%
    padding 4rem 2rem
    position relative
#container-inner
    padding-bottom 120px
#footer
    bottom 0
    border-top 1px solid #ddd
    height 120px
    margin-top 2*$paddingDefault
    padding-top $paddingDefault
    position absolute
    width 100%

.header
    height 10rem !important
    border-bottom 1px solid #ddd
    margin-bottom 2*$paddingDefault
    padding-bottom $paddingDefault

// *****************************************************************************
// Sidebar
// *****************************************************************************

#sidebar .nav a
    display inline
    text-align left
#sidebar .nav a.active
    color #333333

#sidebar-header .badge
    border-radius 100px
    padding .8rem 1rem

// *****************************************************************************
// Bootstrap extensions
// *****************************************************************************

// buttons
.btn-simple
    margin 0
    padding 0
.btn-simple:hover, .btn-simple.active
    text-decoration underline

// forms
label.form-control-alt
    margin 0
    padding 0
    text-transform uppercase
input.form-control-alt
    display block
    border none
    border-radius $radiusDefault
    padding .6rem 1.2rem
    width 100%

// form-button groups
.btn-group-alt
    position relative
    z-index 0
.btn-group-alt input
    position relative
    z-index 1
.btn-group-alt button
    position absolute
    top 0
    right 0
    z-index 2
    padding .3rem .4rem
    margin 0

div.table
    border none !important
    padding 8px 16px
div.table > .thead > .row:first-child
    border-bottom 1px solid #ddd
    color rgb(68, 68, 68)
div.table > .tbody > .row
    border-top 1px solid #ddd
div.table .col
    padding 8px
div.table .preview
    max-height 0
    overflow hidden
    transition max-height .5s
    -webkit-transition max-height .5s
div.table .preview.open
    max-height 40rem
    overflow-y scroll
    margin-bottom 4rem
    border-left 1px dotted #ddd
div.table .preview .preview-heading
    border-top 1px dotted #ddd
    padding 8px
div.table .preview .preview-content
    padding 16px 32px 16px 16px
div.table-striped > .tbody > .row:nth-of-type(odd)
    background-color #f9f9f9
div.table-hover > .tbody > .row:hover
    background-color #f5f5f5

// *****************************************************************************
// CodeMirror extension
// *****************************************************************************

.CodeMirror
    border-radius $radiusDefault
    border 1px solid #ddd
