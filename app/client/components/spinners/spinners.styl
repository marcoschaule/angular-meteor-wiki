// Spinners
// ********************************************************************************

.spinner-wrapper
    position absolute
    background-color rgba(255, 255, 255, 0.8)
    width 100%
    height 100%
    top 0
    
.spinner-wrapper > .spinner
    position absolute
    top calc(50% - 4rem)
    left calc(50% - 4rem)
