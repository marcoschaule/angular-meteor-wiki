.spinner-wrapper
    position absolute
    background-color rgba(252, 252, 252, 0.75) // #fcfcfc
    width 100%
    height 100%
    top 0
    
.spinner-wrapper > .spinner
    position absolute
    top calc(50% - 4rem)
    left calc(50% - 4rem)
