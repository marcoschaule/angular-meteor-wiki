//- ****************************************************************************
//- Error handler
//- ****************************************************************************

mixin errorHandler(strErrName)
    span&attributes({ 'data-ng-if': 'vm.objErrs.'+strErrName })
        |{{ 'authentication.error.#{strErrName}.'+vm.objErrs.#{strErrName}|translate }}

mixin errorAlert(strErrName)
    .alert.alert-danger&attributes({ 'data-ng-if': 'vm.objErrs.'+strErrName })
        |{{ 'authentication.error.#{strErrName}.'+vm.objErrs.#{strErrName}|translate }}

//- ****************************************************************************
//- Input template for all
//- ****************************************************************************

mixin inputAll(strType, strModel, strErr, strLabel, strId, strName, strValue, numTabIndex, strChange, isMandatory)
    label&attributes({ 'for': strId })
        |{{ '#{strLabel}' | translate }}:
        if (isMandatory)
            |&nbsp;&#42;
    input.form-control&attributes({
        'type'          : strType,
        'id'            : strId,
        'name'          : strName,
        'value'         : strValue,
        'tabindex'      : numTabIndex,
        'data-ng-blur'  : strChange,
        'data-ng-model' : strModel,
        'data-ng-class' : "{ error: " + strErr + " }",
    })

//- ****************************************************************************
//- Input text
//- ****************************************************************************

mixin inputText(strModel, strErr, strLabel, strId, strName, strValue, numTabIndex, strChange, isMandatory)
    +inputAll('text', strModel, strErr, strLabel, strId, strName, strValue, numTabIndex, strChange, isMandatory)

//- ****************************************************************************
//- Input password
//- ****************************************************************************

mixin inputPassword(strModel, strErr, strLabel, strId, strName, strValue, numTabIndex, strChange, isMandatory)
    +inputAll('password', strModel, strErr, strLabel, strId, strName, strValue, numTabIndex, strChange, isMandatory)

//- ****************************************************************************
//- Input password
