mixin inputRadio(strModel, strErr, strLabel, strId, strName, strValue, numTabIndex, strChange, isMandatory)
    input.form-control&attributes({
        'type'          : 'radio',
        'id'            : strId,
        'name'          : strName,
        'value'         : strValue,
        'tabindex'      : numTabIndex,
        'data-ng-blur'  : strChange,
        'data-ng-model' : strModel,
        'data-ng-class' : "{ error: " + strErr + " }",
    })
    label&attributes({ 'for': strId })
        |{{ '#{strLabel}' | translate }}
        if (isMandatory)
            |&#42;

